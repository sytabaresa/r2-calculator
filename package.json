{
    "private": true,
    "name": "calculator",
    "version": "1.0.0",
    "license": "MIT",
    "publicPath": "/r2-calculator/",
    "homepage": "https://sytabaresa.github.io/r2-calculator",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:gh-pages": "vite build --base=/r2-calculator/",
        "preview": "vite preview --port 8080",
        "build:desktop": "npm run build && go build -o r2-calculator",
        "build:desktop-windows": "npm run build &&  go build -ldflags=\"H windowsgui\" -o webview-example.exe",
        "serve:desktop": "./r2-calculator",
        "serve": "vite preview --port 8080",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "preact",
            "plugin:@typescript-eslint/recommended"
        ],
        "ignorePatterns": [
            "dist/"
        ]
    },
    "dependencies": {
        "preact": "^10.27.2",
        "preact-robot": "^1.1.0",
        "preact-router": "^4.1.2",
        "robot3": "^1.2.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "autoprefixer": "^10",
        "vite-plugin-static-copy": "^3.1.2",
        "eslint": "^9.36.0",
        "eslint-config-preact": "^2.0.0",
        "postcss": "^8",
        "tailwindcss": "^4.1.13",
        "typescript": "^5.9.2",
        "vite": "^7.1.7",
        "@preact/preset-vite": "^2.10.2",
        "@tailwindcss/vite": "^4.1.13"
    },
    "jest": {
        "preset": "jest-preset-preact",
        "setupFiles": [
            "<rootDir>/tests/__mocks__/browserMocks.ts",
            "<rootDir>/tests/__mocks__/setupTests.ts"
        ]
    }
}