{
    "private": true,
    "name": "calculator",
    "version": "1.0.0",
    "license": "MIT",
    "publicPath": "/r2-calculator/",
    "homepage": "https://sytabaresa.github.io/r2-calculator",
    "scripts": {
        "build": "preact build",
        "build:desktop": "npm run build && go build -o r2-calculator",
        "build:desktop-windows": "npm run build &&  go build -ldflags=\"H windowsgui\" -o webview-example.exe",
        "serve:desktop": "./r2-calculator",
        "serve": "sirv build --port 8080 --cors --single",
        "dev": "preact watch",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
        "test": "jest ./tests",
        "deploy": "cross-env NODE_ENV=gh-pages PREACT_APP_PATH=r2-calculator npm run build && gh-pages -d build"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "preact",
            "plugin:@typescript-eslint/recommended"
        ],
        "ignorePatterns": [
            "build/"
        ]
    },
    "dependencies": {
        "preact": "^10.19.4",
        "preact-render-to-string": "^6.3.1",
        "preact-robot": "^0.3.0",
        "preact-router": "^4.1.2",
        "robot3": "^0.4.1"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^5.0.0",
        "@tailwindcss/postcss7-compat": "^2.2.17",
        "@types/enzyme": "^3.10.18",
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "autoprefixer": "^10",
        "cross-env": "^7.0.3",
        "enzyme": "^3.11.0",
        "enzyme-adapter-preact-pure": "^4.1.0",
        "eslint": "^8.56.0",
        "eslint-config-preact": "^1.3.0",
        "gh-pages": "^6.1.1",
        "git-repo-name": "^1.0.1",
        "jest": "^29.7.0",
        "jest-preset-preact": "^4.1.1",
        "postcss": "^8",
        "preact-cli": "^3.5.1",
        "preact-cli-plugin-env-vars": "^1.2.1",
        "preact-cli-tailwind": "^3.0.0",
        "preact-purge-tailwindcss": "^2.1.3",
        "sirv-cli": "^2.0.2",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat",
        "typescript": "^5.3.3"
    },
    "jest": {
        "preset": "jest-preset-preact",
        "setupFiles": [
            "<rootDir>/tests/__mocks__/browserMocks.ts",
            "<rootDir>/tests/__mocks__/setupTests.ts"
        ]
    }
}