{
    "private": true,
    "name": "calculator",
    "version": "1.0.0",
    "license": "MIT",
    "publicPath": "/r2-calculator/",
    "homepage": "https://sytabaresa.github.io/r2-calculator",
    "scripts": {
        "build": "preact build",
        "build:desktop": "npm run build && go build -o r2-calculator",
        "serve:desktop": "./r2-calculator",
        "serve": "sirv build --port 8080 --cors --single",
        "dev": "preact watch",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
        "test": "jest ./tests",
        "deploy": "cross-env NODE_ENV=gh-pages PREACT_APP_PATH=r2-calculator npm run build && gh-pages -d build"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "preact",
            "plugin:@typescript-eslint/recommended"
        ],
        "ignorePatterns": [
            "build/"
        ]
    },
    "dependencies": {
        "preact": "^10.3.1",
        "preact-render-to-string": "^5.1.4",
        "preact-robot": "^0.2.3",
        "preact-router": "^3.2.1",
        "robot3": "^0.2.19"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^3.0.0",
        "@tailwindcss/postcss7-compat": "^2.1.0",
        "@types/enzyme": "^3.10.5",
        "@types/jest": "^26.0.8",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "autoprefixer": "^9",
        "cross-env": "^7.0.3",
        "enzyme": "^3.11.0",
        "enzyme-adapter-preact-pure": "^2.2.0",
        "eslint": "^6.8.0",
        "eslint-config-preact": "^1.1.1",
        "gh-pages": "^3.1.0",
        "git-repo-name": "^1.0.1",
        "jest": "^26.2.2",
        "jest-preset-preact": "^4.0.2",
        "postcss": "^7",
        "preact-cli": "^3.0.0",
        "preact-cli-plugin-env-vars": "^1.2.1",
        "preact-cli-tailwind": "^2.0.1",
        "preact-purge-tailwindcss": "^2.1.3",
        "sirv-cli": "^1.0.0-next.3",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat",
        "typescript": "^3.7.5"
    },
    "jest": {
        "preset": "jest-preset-preact",
        "setupFiles": [
            "<rootDir>/tests/__mocks__/browserMocks.ts",
            "<rootDir>/tests/__mocks__/setupTests.ts"
        ]
    }
}